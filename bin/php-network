#!/bin/bash

cmd=$(docker network ls | grep her-network)
## execution de PHP de mani√®re autonome (pas besoin d'un environnement de containers)
docker run \
    --init \
    --rm \
    -ti \
    --name weather-php-running-script \
    -v "$PWD":"$PWD" \
    --user 1000:1000 \
    -w "$PWD" \
    --network weather-network \
    weather-php-interpreter:latest php $@